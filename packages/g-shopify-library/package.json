{
    "name": "@snailicide/g-shopify-library",
    "version": "0.0.2",
    "description": "Collections of types and utilities for working with Shopify",
    "private": false,
    "type": "module",
    "files": [
        "types",
        "dist",
        "CHANGELOG.md"
    ],
    "exports": {
        ".": [
            {
                "import": "./dist/index.mjs",
                "types": "./types/index.d.ts",
                "require": "./dist/index.cjs",
                "default": "./dist/index.js"
            },
            "./dist/index.js"
        ]
    },
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "umd:main": "dist/index.umd.js",
    "jsdelivr": "dist/index.umd.js",
    "unpkg": "dist/index.umd.js",
    "module": "dist/index.esm.js",
    "cdn": "dist/index.umd.js",
    "keywords": [
        "typescript",
        "js",
        "ts",
        "javascript",
        "shopify",
        "schema",
        "utilities"
    ],
    "scripts": {
        "\n========== BUILD >> ==========": "",
        "build": "pnpm build:ts && pnpm build:rollup",
        "build:rollup": "rollup --config ./rollup.config.js",
        "build:ts": "tsc --build",
        "\n========== DEV >> ==========": "",
        "dev": "tsc --build --watch",
        "\n========== TEST >> ==========": "",
        "test": "jest",
        "test:watch": "jest --watch",
        "example": "ts-node --esm ./writeExampleSchema.ts",
        "\n========== PUBLISH >> ==========": "",
        "release": "pnpm prerelease && pnpm publish --access public --report-summary --no-git-checks",
        "prerelease": "pnpm clean && pnpm build && pnpm fix && pnpm check && pnpm test",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:ts": "tsc --build --clean",
        "clean:build": "rm -R -f dist && rm -R -f types",
        "\n========== CODE STYLE >> ==========": "",
        "lint": "cross-var eslint \"{$npm_package_config_eslint_path}.{$npm_package_config_eslint_extensions}\" --ignore-path .gitignore -c $npm_package_config_eslint_config",
        "prettier": "cross-var prettier {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions}",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm lint && pnpm prettier --check",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm prettier --write"
    },
    "homepage": "https://github.com/gbtunney/snailicide-monorepo#readme",
    "bugs": {
        "url": "https://github.com/gbtunney/snailicide-monorepo/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gbtunney/snailicide-monorepo.git"
    },
    "license": "MIT",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "devDependencies": {
        "@snailicide/build-config": "workspace:0.2.4",
        "@snailicide/g-library": "workspace:^0.1.2",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.7.18",
        "@types/yargs": "^17.0.13",
        "eslint": "^8.27.0",
        "expect-type": "^0.15.0",
        "jest": "^29.3.1",
        "jsdoc": "^4.0.0",
        "prettier": "^2.7.1",
        "rollup": "^3.3.0",
        "rollup-plugin-typescript2": "^0.34.1",
        "taffydb": "^2.7.3",
        "ts-jest": "^29.0.3",
        "ts-jest-resolver": "^2.0.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.9.3",
        "yargs": "^17.6.2",
        "zod": "^3.19.1"
    },
    "prettier": "@snailicide/build-config/prettier",
    "config": {
        "eslint": {
            "extensions": "ts,js,cjs,mjs",
            "path": ".es*,*,**/*",
            "config": ".eslintrc.cjs"
        },
        "prettier": {
            "extensions": "ts,js,cjs,mjs,cts,json,yaml,yml,graphql,md",
            "path": "*,**/*"
        }
    },
    "dependencies": {
        "@shopify/admin-graphql-api-utilities": "^2.0.1",
        "@types/ramda": "^0.28.20",
        "ramda": "^0.28.0",
        "ramda-adjunct": "^3.3.0",
        "type-fest": "^3.1.0"
    },
    "jest": {
        "preset": "ts-jest",
        "resolver": "ts-jest-resolver",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "dist",
            "types"
        ]
    }
}
